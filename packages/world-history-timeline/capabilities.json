  },
  "dataViewMappings": [
    {
      "conditions": [
        {
          "civilization": { "max": 1 },
          "region": { "max": 1 },
          "era": { "max": 1 },
          "startYear": { "max": 1 },
          "endYear": { "max": 1 }
        }
      ],
      "categorical": {
        "categories": {
          "select": [
            { "for": { "in": "civilization" } },
            { "for": { "in": "region" } },
            { "for": { "in": "era" } }
          ],
          "dataReductionAlgorithm": {
            "top": { "count": 30000 }
          }
        },
        "values": {
          "select": [
            { "for": { "in": "startYear" } },
            { "for": { "in": "endYear" } }
          ]
        }
      }
    }
  ],
  "supportsHighlight": true,
  "supportsKeyboardFocus": true,
  "supportsLandingPage": true,
  "supportsEmptyDataView": true,
  "supportsMultiVisualSelection": true,
  "privileges": []
}
