{
  "dataRoles": [
    {
      "displayName": "Category",
      "name": "civilization",
      "kind": "Grouping",
      "description": "Label for each timeline bar"
    },
    {
      "displayName": "Legend",
      "name": "region",
      "kind": "Grouping",
      "description": "Color grouping for timeline bars"
    },
    {
      "displayName": "Group",
      "name": "era",
      "kind": "Grouping",
      "description": "Optional categorical field used for tooltips and sorting context"
    },
    {
      "displayName": "Start",
      "name": "startYear",
      "kind": "Measure",
      "description": "Numeric start year (negative for BCE)"
    },
    {
      "displayName": "End",
      "name": "endYear",
      "kind": "Measure",
      "description": "Numeric end year (negative for BCE)"
    }
  ],
